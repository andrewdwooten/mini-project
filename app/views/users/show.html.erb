<h1>Welcome..<%= @user.name %>..to Robot World!</h1>

<h3>Your Robots!</h3>

<% @robots.each do |robot| %>
  <div class="row">
      <div class="col s6 m3">
        <div class="card">
          <div class="card-image">
            <img src='https://robohash.org/<%= robot.name %>'>
            <span class="card-title"><%= robot.name %></span>
          </div>
          <div class="card-content">
            <ul>
              <li>Name: <%= robot.location %></li>
              <li>Serial No.: <%= robot.serial_no %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
<% end %>
