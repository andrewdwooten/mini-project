<h1>Robot Bank</h1>

<div class="row">
       <div class="col s6 m3">
         <div class="card blue-grey darken-1">
           <div class="card-content white-text">
             <span class="card-title">Robot Generator</span>
             <ul>
               <li>
                Robots Available: <%= Robot.available.count %>
               </li>
             </ul>
           </div>
           <div class="card-action">
             <%= form_tag(admin_robots_path, :method=>'post', :multipart => true) do %>
               <%= number_field_tag "quantity" %>
               <%= submit_tag 'Generate Robots' %>
             <% end %>
        </div>
         </div>
       </div>
     </div>
