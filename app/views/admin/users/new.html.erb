<h1>Create a New User</h1>

<div class="row">
       <div class="col s6 m3">
         <div class="card blue-grey darken-1">
           <div class="card-content white-text">
             <span class="card-title">Create User</span>
           </div>
           <div class="card-action">
             <%= form_tag(admin_users_path, :method=>'post', :multipart => true) do %>
               <%= text_field_tag "name", placeholder="Name" %>
               <%= email_field_tag "email", placeholder="Email Address" %>
               <%= label_tag :password %>
               <%= password_field_tag "password", placeholder="Password" %>
               <%= label_tag :password_confirmation %>
               <%= password_field_tag "password_confirmation", placeholder="Confirm Password" %>
               <%= submit_tag 'Create New User' %>
             <% end %>
        </div>
         </div>
       </div>
     </div>
